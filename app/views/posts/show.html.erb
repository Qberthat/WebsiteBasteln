<p id="notice"><%= notice %></p>

<h1>
  <%= @post.title %>
</h1>

<p
  style="font-size:16px"><u> Written by:</u> <%= User.find(@post.user_id).email %>
</p>

<p>
  <%= simple_format @post.body %>
</p>
<br/>

<%= link_to 'Edit', edit_post_path(@post)if can? :edit, @post%>
<%= link_to 'Back', posts_path %>
<h2> Comments (<%= @post.comments.size %>)</h2>
<%= render partial: 'posts/comment', collection: @post.comments.reverse %>
<%= render partial: 'comments/form' %>
