<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th style='font-size: 25px'>Title</th>
      <th style='font-size: 25px'>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= post.user.email %> </td>
        <td><%= link_to 'Edit', edit_post_path(post) if can? :edit, post %> </td>
        <td><%= link_to('Delete', post, method: :delete, data: { confirm: 'Are you sure?' }) if can? :destroy, post %> </td>
       </tr>
    <% end %>
  </tbody>
</table>

<br>


<a href="/posts/new" style="margin-left: 7px;">New Post</a>
